{
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 2020,
        "sourceType": "module"
    },
    "extends": [
        "plugin:@typescript-eslint/recommended"
    ],
    "env": {
        "node": true
    },
    "ignorePatterns": [
        "build/**/*"
    ],
    "rules": {
        "indent": "off",
        "@typescript-eslint/indent": "off"
    }
}